<!DOCTYPE html>
<html>
    <head>
        <meta charset="utc-8">
        <title>Using Razor</title>
        <link rel="stylesheet" href="~/css/style.css">
    </head>
    <body>
        <h1>Index View</h1>
        @{
            DateTime CurrentTime = DateTime.Now;
            <h1>@CurrentTime.ToString("dddd dd, MMMM yyyy h:mm tt")</h1>
            string[] DeliciousFoods = new string[]
            {
                "Apple", "Donuts", "Burger", "Cookies", "Sandwich", "Onion Rings", "Corn"
            };

            foreach(var food in DeliciousFoods)
            {
                char first = food[0];
                if(first.Equals('C'))
                {
                    <p class="red">@food</p>
                } else {
                    <p>@food</p>
                }
            }
        }
    </body>
</html>